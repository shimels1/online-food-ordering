<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    layout_height="250dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    card_view:cardCornerRadius="5dp"
    android:elevation="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="10dp"
    android:id="@+id/rv_full_view_card"
    android:transitionName="rv_contener_card_view"
    >
    <LinearLayout
        android:id="@+id/rv_item_rl"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@color/bg">

        <ImageView
            android:id="@+id/rv_full_v_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/woin"
            android:transitionName="image"/>

        <GridLayout
            android:layout_below="@+id/rv_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:id="@+id/rv_full_v_name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:padding="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/black_text"
                android:text="dddddddddddd"
                android:transitionName="resturant_name"/>


            <TextView
                android:id="@+id/rv_full_v_price"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:elevation="10dp"
                android:fontFamily="serif"
                android:textSize="18dp"
                android:gravity="center"
                android:text="delivery time"
                android:textColor="@color/black_text"
                android:transitionName="delivery_time_title"/>
        </GridLayout>

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="cvt"
                android:id="@+id/rv_full_v_pm_cv">
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            android:layout_marginTop="5dp"
           android:layout_marginLeft="3dp"
           android:layout_marginRight="3dp">

            <ImageButton
                android:id="@+id/rv_full_v_mines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:src="@drawable/mini" />

            <TextView

                android:id="@+id/rv_full_v_itemQuantity"
                android:layout_width="230dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black_text"
                android:textSize="20dp" />

            <ImageButton

                android:id="@+id/rv_full_v_plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:src="@drawable/pluse" />

        </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/rv_full_v_addBtn"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:text="ADD TO BASKET"
            android:background="@color/gray"
            android:textColor="@color/colorAccent"
            android:transitionName="tbtn"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>

