<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/res_respond_appbar"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/res_respond_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:src="@drawable/check" />

        <TextView
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_columnWeight="11"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:textColor="@color/dark_green"
            android:text="Request Sent"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/res_respond_comformation_image"
            android:layout_width="30sp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:src="@drawable/check"
            android:visibility="invisible"/>

        <TextView
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_columnWeight="11"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:textColor="@color/black_text"
            android:text="Comferming order to the restorant"
            android:textSize="20dp"
            android:id="@+id/res_respond_comformation_text"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_marginRight="5dp"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:text="Cancel order"
            android:textSize="20dp"
            android:layout_columnWeight="11"
            >
        <Button
            android:layout_width="wrap_content"
            android:text="Cancel order"
            android:textSize="20dp"
            android:textColor="@color/black_text"
            android:layout_height="wrap_content"
            android:id="@+id/res_respond_cancel_request_btn"/>
    </LinearLayout>
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:visibility="invisible"
                android:src="@drawable/check"
                android:id="@+id/res_respond_priparing_image"/>

            <TextView
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_columnWeight="11"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:text="Food is bing prepared"
                android:textSize="20dp"
                android:id="@+id/res_respond_priparing_text"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_row="4"
                android:visibility="invisible"
                android:src="@drawable/check"
                android:id="@+id/res_respond_driver_image"/>

            <TextView
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_columnWeight="11"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="4"
                android:text="Driver is on the way"
                android:textSize="20dp"
                android:id="@+id/res_respond_driver_text"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_marginRight="5dp"
                android:layout_row="5"
                android:layout_height="wrap_content"
                android:text="Cancel order"
                android:textSize="20dp"
                android:layout_columnWeight="11"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:text="Track Driver"
                    android:textSize="20dp"
                    android:textColor="@color/black_text"
                    android:layout_height="wrap_content"
                    android:id="@+id/res_respond_track_driver"
                    android:visibility="gone"/>
            </LinearLayout>
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_row="6"
                android:visibility="invisible"
                android:src="@drawable/check"
                android:id="@+id/res_respond_arrived_image"/>

            <TextView
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_columnWeight="11"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="6"
                android:text="Food is arrived time to eat :)"
                android:textSize="20dp"
                android:id="@+id/res_respond_arrived_text"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_marginRight="5dp"
                android:layout_row="7"
                android:layout_height="wrap_content"
                android:text="Cancel order"
                android:textSize="20dp"
                android:layout_columnWeight="11"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:text="Show Driver"
                    android:textSize="20dp"
                    android:textColor="@color/black_text"
                    android:layout_height="wrap_content"
                    android:id="@+id/res_respond_final_btn"
                    android:visibility="gone"/>
            </LinearLayout>

</GridLayout>




    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/res_respond_order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="write something"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="70dp"
        android:id="@+id/res_respond_login_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/blue"
        android:text="login"
        />

    </android.support.design.widget.CoordinatorLayout>