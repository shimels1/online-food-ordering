<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:orientation="vertical"
        android:paddingBottom="11dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="11dp">

        <TextView
            android:id="@+id/lv_basket_no_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_row="0"
            android:text="10*5"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/lv_basket_name"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="5"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:gravity="fill"
            android:text="kukkkkkk "
            android:textColor="@color/black_text"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/lv_basket_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="2"
            android:layout_row="0"
            android:text="10000 birr"
            android:textColor="@color/black_text"
            android:textSize="17dp" />
    <!--    <ImageView
            android:src="@drawable/account_icon2"
            android:id="@+id/lv_basket_delete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="2"
            android:layout_row="0"
            android:textColor="@color/black_text"
            android:textSize="17dp"
            android:visibility="visible"/>
-->
    </GridLayout>
</android.support.design.widget.CoordinatorLayout>