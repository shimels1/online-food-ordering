<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>

    <TextView
        android:id="@+id/basket_add_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Add More Items"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView

            android:id="@+id/basket_subtotal_title"
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_marginLeft="15dp"
            android:layout_row="0"
            android:text="Subtotal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black_text"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/basket_subtotal_tv"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Subtotal"
            android:textColor="@color/black_text"
            android:textSize="18dp" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_marginLeft="15dp"
            android:layout_row="1"
            android:text="Delivery fee"
android:id="@+id/basket_delivery_fee_title"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black_text"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/basket_delivery_fee_tv"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:text="0"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black_text"
            android:textSize="18dp" />
        <TextView
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_marginLeft="15dp"
            android:layout_row="2"
            android:id="@+id/basket_service_fee_title"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="service fee"
            android:textColor="@color/black_text"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/basket_service_fee_tv"
            android:layout_column="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:text="0"
            android:textColor="@color/black_text"
            android:textSize="18dp" />

    </GridLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="20dp"
    android:background="@color/black_divider"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_marginLeft="15dp"
            android:layout_row="0"
            android:text="Current Balance"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:visibility="gone"
            android:id="@+id/basket_current_balance_title"/>

        <TextView
            android:id="@+id/basket_current_balance_tv"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:text="1000 birr "
            android:textColor="@color/black_text"
            android:textSize="18dp"

            android:visibility="gone"/>
        <TextView
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_marginLeft="15dp"
            android:layout_row="1"
            android:text="Total Food Fee"

            android:layout_marginTop="5dp"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/basket_total_tv"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_marginTop="5dp"
            android:text="Total "
            android:textColor="@color/black_text"
            android:textSize="18dp" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_marginLeft="15dp"
            android:layout_row="2"
            android:text="Final Ballance"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:visibility="gone"
            android:id="@+id/basket_final_balance_title"/>

        <TextView
            android:id="@+id/basket_final_balance"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_marginTop="5dp"
            android:text="Total "
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:visibility="gone"/>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/black_divider"/>
    <Button
        android:id="@+id/basket_checkout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/holo_green_dark"
        android:text="Proceed to Checkout"
        android:background="@color/bg" />
    <Button
        android:visibility="gone"
        android:id="@+id/basket_send_to_rs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:text="Send To Restaurant"
        android:background="@android:color/holo_green_dark" />

</LinearLayout>