<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


        <item name="android:textColorSecondary">@color/bg</item>
        <item name="android:actionMenuTextColor">@color/bg</item>

        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>

    </style>  <!-- Base application theme. -->
    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
<!--/////////////////////navebar styles  -->
    <style name="nav_them" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/window_bg</item>
        <!-- <item name="android:textSize">18dp</item>

         <item name="android:textSize">14sp</item>
         <item name="android:textStyle">bold</item>
         <item name="android:fontFamily">Robot</item>
    -->
        <item name="android:checkable">@color/colorAccent</item>
        <item name="android:checkableBehavior">@color/black_text</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black_text</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="menu_them" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/md_grey_800</item>
    </style>
</resources>
